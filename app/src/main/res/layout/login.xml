<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".activity.login.LoginActivity">

        <com.an.customfontview.CustomButton
            android:id="@+id/tv_login"
            elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="Partner Sign in"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            app:textFontPath="fonts/MyriadProBold.ttf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_login"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/center_layout"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1.5"
                android:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/center_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="20dp">


                <com.an.customfontview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="E-mail"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:textFontPath="fonts/MyriadProRegular.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/mail" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#9E9E9E" />


                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/colorWhite"
                        android:gravity="center|left"
                        android:hint="abc@xyz.com"
                        android:padding="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="15dp"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                </LinearLayout>

                <com.an.customfontview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="Password"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:textFontPath="fonts/MyriadProRegular.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/lock" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#9E9E9E" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:gravity="center|left"
                        app:hintEnabled="false"
                        app:passwordToggleDrawable="@drawable/eye_grey"
                        app:passwordToggleEnabled="true"

                        app:passwordToggleTint="@color/colorAccent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:hint="password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <!--  <com.an.customfontview.CustomEditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="1dp"
                          android:layout_marginBottom="1dp"
                          android:background="@color/colorWhite"
                          android:drawableRight="@drawable/eye_grey"
                          android:gravity="center|left"
                          android:hint="*******"
                          android:padding="10dp"
                          android:textColor="@color/colorBlack"
                          android:textSize="20dp"
                          app:textFontPath="fonts/MyriadProRegular.ttf" />-->


                </LinearLayout>

                <com.an.customfontview.CustomTextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="Forgot Your Password?"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:textFontPath="fonts/MyriadProRegular.ttf" />

                <com.an.customfontview.CustomButton
                    android:id="@+id/btn_signin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_theam"
                    android:gravity="center"
                    android:text="Sign in"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    app:textFontPath="fonts/MyriadProRegular.ttf" />


            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/center_layout"
                android:layout_alignParentBottom="true"
                android:layout_weight="2"
                android:orientation="vertical">


                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="Sign in with"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    app:textFontPath="fonts/MyriadProRegular.ttf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <ImageView
                        android:id="@+id/iv_facebook"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="3"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/facebook" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Or"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <ImageView
                        android:id="@+id/iv_google"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="3"
                        android:scaleType="fitXY"
                        android:src="@drawable/google" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account?"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        app:textFontPath="fonts/MyriadProRegular.ttf"

                        />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_up"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        android:onClick="showDialog"
                        app:textFontPath="fonts/MyriadProRegular.ttf"

                        />


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>
