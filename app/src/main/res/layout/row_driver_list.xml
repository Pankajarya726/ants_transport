<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:minHeight="120dp"
    android:background="@drawable/rounded_button"
    android:orientation="horizontal"
    android:weightSum="4">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_edit_pic">

    </ImageView>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:padding="10dp">

        <com.an.customfontview.CustomTextView
            android:id="@+id/tv_vehicle_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center|left"
            android:text="Paul Walker"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            app:textFontPath="fonts/MyriadProBold.ttf" />


        <ImageView
            android:id="@+id/img_date"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_vehicle_no"
            android:layout_marginTop="5dp"
            android:padding="2.5dp"
            android:scaleType="centerInside"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/img_model"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="5dp"
            android:padding="2.5dp"
            android:scaleType="centerInside"
            android:src="@drawable/mail_green" />

        <com.an.customfontview.CustomTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_vehicle_no"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_date"
            android:gravity="center|left"
            android:text="1234567890"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:textFontPath="fonts/MyriadProRegular.ttf" />

        <com.an.customfontview.CustomTextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_date"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="paul.walker@gmail.com"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:textFontPath="fonts/MyriadProRegular.ttf" />


    </RelativeLayout>


    <com.an.customfontview.CustomButton
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_theam"
        android:text="view"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        app:textFontPath="fonts/MyriadProRegular.ttf" />


</LinearLayout>

