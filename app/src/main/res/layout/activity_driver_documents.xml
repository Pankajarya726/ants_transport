<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".activity.driverRegistration.DriverDocumentsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                android:src="@drawable/arrow_back" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Driver Document"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:textFontPath="fonts/poppins_regular.otf" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Professional Driver Picture of the face"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_user"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_user"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_idproof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Proof"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_front"
                        android:layout_below="@+id/tv_idproof"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_idproof"
                        android:layout_toRightOf="@+id/id_front"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_id_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_back"
                        android:layout_alignParentRight="false"
                        android:layout_toRightOf="@+id/id_front"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_id_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_front"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/img_id_back"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_driver_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Valid Driver's License front and back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_driver_licence"
                        android:layout_toRightOf="@+id/license_front"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_front"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/tv_driver_licence"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <ImageView
                        android:id="@+id/img_license_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_back"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:layout_toRightOf="@+id/img_license_front"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_license_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_front"
                        android:layout_margin="5dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <!--   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="15dp"
                       android:background="@color/colorWhite">

                       <com.an.customfontview.CustomTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:layout_centerVertical="true"
                           android:text="Professional Driver\npicture of the face"
                           android:textColor="@color/colorBlack"
                           android:textSize="@dimen/tv_size"
                           app:textFontPath="fonts/poppins_regular.otf" />


                       <ImageView
                           android:id="@+id/img_driver_pic"
                           android:layout_width="90dp"
                           android:layout_height="90dp"
                           android:layout_alignParentRight="true"
                           android:layout_margin="5dp"
                           android:background="@color/colorWhite"
                           android:elevation="5dp"
                           android:scaleType="centerInside"
                           android:src="@drawable/camera_black" />


                   </RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_proof_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="false"
                        android:text="Proof of home address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_home_address"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_proof_home"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_ownership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="false"
                        android:text="Proof of ownership licensing document"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_ownership"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_ownership"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_bank_latter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="false"
                        android:text="Letter from the bank, Not older then one month!"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_bank_latter"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/tv_bank_latter"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_bank_statement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="The most recent page of your bank statement (Not older then one month)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_bank_statement"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/tv_bank_statement"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                </RelativeLayout>


                <com.an.customfontview.CustomButton
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/button_theam"
                    android:text="upload"
                    android:layout_marginBottom="20sp"

                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/tv_size"
                    app:btnFontPath="fonts/poppins_regular.otf" />


                <LinearLayout
                    android:id="@+id/layout_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/tv_size"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>