<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ownerRegistration.vehicleInformation.VehicleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"

                android:visibility="gone"
                android:src="@drawable/arrow_back" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Vehicle Information"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:textFontPath="fonts/poppins_regular.otf" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">


                <com.an.customfontview.CustomTextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Vehicle Type"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:id="@+id/tv_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:drawableRight="@drawable/arrow_drop_down"
                    android:gravity="center|left"
                    android:hint="Select Vehicle"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="15sp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Registration Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:id="@+id/edt_reg_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:drawableRight="@drawable/calenar"
                    android:gravity="center|left"
                    android:hint="YYYY-MM-DD"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="15sp"
                    app:textFontPath="fonts/poppins_regular.otf" />


                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/tare"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomEditText
                    android:id="@+id/edt_tire"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:gravity="center|left"
                    android:hint="@string/enter_tare"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Gross Vehicle Mass"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomEditText
                    android:id="@+id/edt_mass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:gravity="center|left"
                    android:hint="Mass"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Vehicle Registration Number"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomEditText
                    android:id="@+id/edt_reg_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:gravity="center|left"
                    android:hint="Enter Registration Number"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Vehicle Model"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomEditText
                    android:id="@+id/edt_model"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:gravity="center|left"
                    android:hint="Enter Model"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Vehicle Manufacture"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomEditText
                    android:id="@+id/edt_manufacture"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:gravity="center|left"
                    android:hint="Enter Manufacture"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    app:textFontPath="fonts/poppins_regular.otf" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="false"
                        android:layout_alignParentTop="true"
                        android:text="@string/upload_picture_of_latest_vehicle_license"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_license_pic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:layout_below="@+id/tv_licence"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_odometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="false"
                        android:layout_alignParentTop="true"
                        android:text="@string/upload_picture_of_odometer"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_odometer"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="false"
                        android:layout_below="@+id/tv_odometer"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_insurence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="false"
                        android:layout_alignParentTop="true"
                        android:text="Upload Picture Proof of insurance"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_insurence"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="false"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/tv_insurence"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>




                <com.an.customfontview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Picture of Vehicle"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    app:textFontPath="fonts/poppins_regular.otf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:text="back"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:text="Left"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:text="Right"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        app:textFontPath="fonts/poppins_regular.otf" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <ImageView
                        android:id="@+id/img_vehicle_front"
                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                    <ImageView
                        android:id="@+id/img_vehicle_back"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_vehicle_left"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_vehicle_right"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </LinearLayout>



                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Vehicle Identification Number(VIN)"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    app:textFontPath="fonts/poppins_regular.otf" />

                <com.an.customfontview.CustomEditText
                    android:id="@+id/edt_vin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangular_bg"
                    android:gravity="center|left"
                    android:hint="Enter Identification Number"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    app:textFontPath="fonts/poppins_regular.otf" />



                <com.an.customfontview.CustomButton
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="20sp"

                    android:background="@drawable/button_theam"
                    android:text="@string/save_continue"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    app:btnFontPath="fonts/poppins_regular.otf" />


                <LinearLayout
                    android:id="@+id/layout_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        app:textFontPath="fonts/poppins_regular.otf" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</layout>