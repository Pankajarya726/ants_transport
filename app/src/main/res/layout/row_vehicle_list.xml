<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:minHeight="120dp"
        app:cardCornerRadius="1px"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <ImageView
                android:id="@+id/img_vehicle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/truck">

            </ImageView>



            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_vehicle"
                android:gravity="center|left"
                android:text="TATA MP 09 AB 1234"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:textFontPath="fonts/poppins_regular.otf" />


            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_vehicle_model"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_vehicle_type"
                android:layout_toRightOf="@+id/img_vehicle"
                android:gravity="center|left"
                android:text="TATA MP 09 AB 1234"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:textFontPath="fonts/poppins_regular.otf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_vehicle_no"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_vehicle_model"
                android:layout_toRightOf="@+id/img_vehicle"
                android:gravity="center|left"
                android:text="TATA MP 09 AB 1234"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:textFontPath="fonts/poppins_regular.otf" />


            <com.an.customfontview.CustomButton
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/button_theam"
                android:layout_below="@+id/tv_vehicle_no"
                android:layout_toRightOf="@+id/img_vehicle"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                app:textFontPath="fonts/poppins_regular.otf" />
            <com.an.customfontview.CustomButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:background="@drawable/red_button_background"
                android:layout_below="@+id/tv_vehicle_no"
                android:layout_toRightOf="@+id/btn_view"
                android:text="Delete"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:textFontPath="fonts/poppins_regular.otf" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>



