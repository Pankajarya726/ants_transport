<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".activity.ownerRegistration.ownerDocuments.OwnerDocActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:elevation="2dp">

            <!--            <ImageView-->
            <!--                android:id="@+id/back"-->
            <!--                android:layout_width="20dp"-->
            <!--                android:layout_height="20dp"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                android:layout_marginLeft="5dp"-->
            <!--                android:src="@drawable/back_icon" />-->

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Owner Documents"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:textFontPath="fonts/poppins_regular.otf" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Professional Owner picture of the face"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_driver_pic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_idproof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="ID Document"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_idproof"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/id_front"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_front"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_idproof"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <ImageView
                        android:id="@+id/img_id_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_back"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@id/img_id_front"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_id_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_front"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Valid Driver's License"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_licence"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="false"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/license_front"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_front"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_licence"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <ImageView
                        android:id="@+id/img_license_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_back"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/img_license_front"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_license_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_front"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_home_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Proof of home address (An account with your home address visible)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_home_address"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/tv_home_address"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_ownership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="false"
                        android:text="Proof of ownership Licensing Document"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_ownership"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/tv_ownership"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="false"
                        android:text="Letter from the bank (Not older than one month)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_bank_latter"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/tv_bank"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_bank_statement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="false"
                        android:text="The most recent page of your bank statement (Not older than one month)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_bank_statement"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/tv_bank_statement"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>


                <com.an.customfontview.CustomButton
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/button_theam"
                    android:text="upload"
                    android:layout_marginBottom="20sp"

                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/tv_size"
                    app:btnFontPath="fonts/poppins_regular.otf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/tv_size"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>