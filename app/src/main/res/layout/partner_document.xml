<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context="com.ants.driverpartner.everywhere.activity.partnerDocument.PartnerDocActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back_icon" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Partner Doucments"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:textFontPath="fonts/MyriadProBold.ttf" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/layout_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Email"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Mobile Number"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Mobile Number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Password"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Password"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="ID Proof"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_front"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/id_back"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <ImageView
                        android:id="@+id/img_id_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_back"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera" />

                    <ImageView
                        android:id="@+id/img_id_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_front"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/img_id_back"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_camera" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Valid Driver's License\nfront and back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_front"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/license_back"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <ImageView
                        android:id="@+id/img_license_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_back"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera" />

                    <ImageView
                        android:id="@+id/img_license_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_front"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/img_license_back"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_camera" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Professional Driver\npicture of the face"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                    <ImageView
                        android:id="@+id/img_driver_pic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Proof of home address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                    <ImageView
                        android:id="@+id/img_home_address"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Latter from the Bank \nConfirming the Account\n(Not older then one month)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                    <ImageView
                        android:id="@+id/img_bank_latter"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="The most recent page of \nyour bank statement\n(Not older then one month)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />


                    <ImageView
                        android:id="@+id/img_bank_statement"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera" />


                </RelativeLayout>


                <com.an.customfontview.CustomButton
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/button_theam"
                    android:text="upload"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/tv_size"
                    app:btnFontPath="fonts/MyriadProRegular.ttf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/tv_size"
                        android:textStyle="bold"
                        app:textFontPath="fonts/MyriadProRegular.ttf" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>


