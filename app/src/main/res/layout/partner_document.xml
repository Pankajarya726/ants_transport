                <LinearLayout
                    android:id="@+id/layout_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Enter Name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />
    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Enter Email"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Mobile Number"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Enter Mobile Number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Password"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_password"

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:paddingLeft="10dp"
                        android:hint="Enter Password"

                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Residential Address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_res_add"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Enter Residential Address"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Postal Address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomEditText
                        android:id="@+id/edt_postal_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="Enter Postal Address"
                        android:maxHeight="135dp"
                        android:maxLines="3"
                        android:minHeight="45dp"
                        android:minLines="2"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Select a vehicle"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/edt_vehicle_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangular_bg"
                        android:hint="BMW 2020"
                        android:drawableRight="@drawable/arrow_drop_down"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/edt_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_idproof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Proof"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_front"
                        android:layout_below="@+id/tv_idproof"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/id_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_idproof"
                        android:layout_toRightOf="@+id/id_front"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <ImageView
                        android:id="@+id/img_id_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_back"
                        android:layout_alignParentRight="false"
                        android:layout_toRightOf="@+id/id_front"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_id_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/id_front"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/img_id_back"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWhite">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_driver_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Valid Driver's License front and back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_driver_licence"
                        android:layout_toRightOf="@+id/license_front"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/license_front"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/tv_driver_licence"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="Front"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/tv_size"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <ImageView
                        android:id="@+id/img_license_back"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_back"
                        android:layout_margin="5dp"
                        android:background="@color/colorWhite"
                        android:layout_toRightOf="@+id/img_license_front"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />

                    <ImageView
                        android:id="@+id/img_license_front"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/license_front"
                        android:layout_margin="5dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/colorWhite"
                        android:elevation="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_black" />


                </RelativeLayout>

