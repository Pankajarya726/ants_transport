<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        tools:context="com.ants.driverpartner.everywhere.activity.forgotPass.ForgotPasswordActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorWhite"
            android:elevation="2dp">


            <com.an.customfontview.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:textFontPath="fonts/MyriadProBold.ttf" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/close" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ant" />

            <com.an.customfontview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="Forgot Your Password?"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:textFontPath="fonts/MyriadProBold.ttf" />

            <com.an.customfontview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="Please enter your cellphone number."
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:textFontPath="fonts/MyriadProRegular.ttf" />

            <com.an.customfontview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="You will receive a link to reset your password"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:textFontPath="fonts/MyriadProRegular.ttf" />

            <com.an.customfontview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="Enter your number"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:textFontPath="fonts/MyriadProRegular.ttf" />


            <com.an.customfontview.CustomEditText
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangular_bg"
                android:hint="731 123 4568"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrey"
                android:textSize="15sp"
                app:textFontPath="fonts/MyriadProRegular.ttf" />


            <com.an.customfontview.CustomButton
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_theam"
                android:padding="10dp"
                android:text="RESET PASSWORD"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                app:textFontPath="fonts/MyriadProRegular.ttf" />


        </LinearLayout>


    </LinearLayout>
</layout>
