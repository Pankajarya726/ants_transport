<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_theme"
        android:orientation="vertical"
        android:padding="0dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_drop"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_drop_down"

                >

            </ImageView>
        </RelativeLayout>


        <com.an.customfontview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Current Delivery information"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            app:textFontPath="fonts/poppins_regular.otf"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorWhite">


            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.ants.driverpartner.everywhere.custom.CircleImageView
                            android:id="@+id/iv_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/profile_edit_pic"
                            app:civ_border_width="0dp"

                            />


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="2"
                        android:orientation="vertical">


                        <com.an.customfontview.CustomTextView

                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:gravity="top|left"

                            android:hint="Name"
                            android:maxLines="1"
                            android:minLines="1"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:textFontPath="fonts/poppins_regular.otf" />

                        <com.an.customfontview.CustomTextView

                            android:id="@+id/tv_vehicle_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="top|left"

                            android:hint="MP09PA2020"
                            android:maxLines="1"
                            android:minLines="1"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:textFontPath="fonts/poppins_regular.otf" />


                        <ImageView

                            android:id="@+id/img_call"

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/call"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/layout6"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10sp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/distance" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="2"
                        android:orientation="vertical">


                        <com.an.customfontview.CustomTextView
                            android:id="@+id/tv_pickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="top|left"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="indore"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:textFontPath="fonts/poppins_regular.otf" />

                        <com.an.customfontview.CustomTextView
                            android:id="@+id/tv_drop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="top|left"
                            android:hint="@string/address2"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="bhopal"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:textFontPath="fonts/poppins_regular.otf" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_weight"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:drawableLeft="@drawable/meter"
                        android:gravity="center"
                        android:hint="5Kg"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="5kg"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_carrier"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/truck"
                        android:gravity="center"
                        android:hint="Log Carrier"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="Log Carier"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:drawableLeft="@drawable/clock"
                        android:gravity="center"
                        android:hint="6:00 PM"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="6:30 PM"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />

                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/calendar_green"
                        android:gravity="center"
                        android:hint="03-sep-2020"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="03-03-2020"
                        android:textColor="@color/colorGrey"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <com.an.customfontview.CustomTextView
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableTop="@drawable/ruler"
                        android:gravity="center|top"
                        android:hint="03-sep-2020"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingTop="5dp"
                        android:text="02-03-2200"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:textFontPath="fonts/poppins_regular.otf" />
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout

                android:id="@+id/rl_accept_decline"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout2"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <com.an.customfontview.CustomTextView
                    android:id="@+id/btn_arrived"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btn_open"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="Arrived at Pickup Location"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    app:textFontPath="fonts/poppins_regular.otf" />
                <!--
                                <com.an.customfontview.CustomTextView
                                    android:id="@+id/btn_collected"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:background="@color/blue_btn_bg_color"
                                    android:gravity="center"
                                    android:text="Arrived at Collection"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="15sp"
                                    app:textFontPath="fonts/poppins_regular.otf" />-->


                <com.an.customfontview.CustomTextView
                    android:id="@+id/btn_open"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="Collection Details"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    app:textFontPath="fonts/poppins_regular.otf"

                    />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>
</layout>

